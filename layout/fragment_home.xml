<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="5dp"
    android:background="#eeeeee"
    android:orientation="vertical"
    tools:context=".ui.HomeFragment">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_alignParentTop="true"
        android:id="@+id/cardview"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        android:layout_above="@+id/bloodCountView"
        android:layout_margin="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3f51b5"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <Button android:id="@+id/btnBnegative"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="B-"
                    android:layout_margin="5dp"
                    android:textColor="#fff" />
                <Button android:id="@+id/btnBpositive"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="B+"
                    android:layout_margin="5dp"

                    android:textColor="#fff" />

                <Button android:id="@+id/btnABnegative"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="AB-"
                    android:layout_margin="5dp"

                    android:textColor="#fff" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:orientation="vertical">

                <Button android:id="@+id/btnOpositive"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="O+"
                    android:layout_margin="5dp"
                    android:textColor="#fff" />
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="hello"
                    android:layout_margin="5dp"

                    android:enabled="false"
                    android:visibility="invisible"

                    android:textColor="#fff" />

                <Button android:id="@+id/btnABpositive"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="AB+"
                    android:layout_margin="5dp"

                    android:textColor="#fff" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:orientation="vertical">

                <Button android:id="@+id/btnOnegative"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="O-"
                    android:layout_margin="5dp"
                    android:textColor="#fff" />
                <Button android:id="@+id/btnApositive"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="A+"
                    android:layout_margin="5dp"

                    android:textColor="#fff" />

                <Button android:id="@+id/btnAnegative"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_button"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="A-"
                    android:layout_margin="5dp"

                    android:textColor="#fff" />
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"


        android:layout_above="@+id/donatedBtn"
        android:id="@+id/bloodCountView"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"

        android:layout_margin="2.5dp"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_margin="2.5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    >

                    <TextView android:id="@+id/totalUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="24dp"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Users"
                        android:gravity="center"
                        android:textColor="#000000"

                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="2.5dp"
                android:background="#ffffff"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    >

                    <TextView android:id="@+id/totalDonors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="24dp"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Donors"
                        android:gravity="center"
                        android:textColor="#000000"

                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>




    </androidx.cardview.widget.CardView>


        <Button
        android:id="@+id/donatedBtn"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="60dp"
        android:background="@android:color/holo_red_dark"
        android:text="Your Blood is Someone's Live"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"

        />


</RelativeLayout>